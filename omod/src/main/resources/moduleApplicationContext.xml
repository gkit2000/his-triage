<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	 xmlns:p="http://www.springframework.org/schema/p"  
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">


	<!--
		So that controllers can use annotations like @Controller and
		@RequestMapping <bean
		class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping"/>
	-->
	<!-- The default place to look for controllers that have annotations -->
	<context:component-scan base-package="org.openmrs.module.triage.web" />
	<bean parent="serviceContext">
		<property name="moduleService">
			<list>
				<value>org.openmrs.module.triage.TriageService</value>
				<bean
					class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
					<property name="transactionManager">
						<ref bean="transactionManager" />
					</property>
					<property name="target">
						<bean class="org.openmrs.module.triage.impl.TriageServiceImpl">
							<property name="dao">
								<bean
									class="org.openmrs.module.triage.db.hibernate.HibernateTriageDAO">
									<property name="sessionFactory">
										<ref bean="sessionFactory" />
									</property>
								</bean>
							</property>
						</bean>
					</property>
					<property name="preInterceptors">
						<list>
							<ref bean="authorizationInterceptor" />
						</list>
					</property>
					<property name="transactionAttributeSource">
						<bean
							class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource" />
					</property>
				</bean>
			</list>
		</property>
	</bean>

</beans>
